@model DoctorEditInputModel

@{var departments = (List<DoctorCreateDepartmentViewModel>)this.ViewData["departments"];}

@{
    ViewData["Title"] = "Doctor Edit";
}

<div class="card shadow mb-4">
    <div class="card-header d-flex flex-row align-items-center justify-content-between">
        <h6 class="m-0 font-weight-bold text-secondary">Doctor <span class="text-info">Edit</span></h6>
        <div>
            <a class="" href="/Doctor/All" role="button">
                <h6 class="m-0 font-weight-bold text-secondary"><i class="fas fa-step-backward"></i>Back to <span class="text-info">All</span></h6>
            </a>
        </div>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-10">
                <form method="post">
                    <div class="form-group row">
                        <label asp-for="FirstName" class="col-sm-2 col-form-label">
                            FirstName
                            <i class="text-danger">*</i>
                        </label>
                        <div class="col-sm-10">
                            <input asp-for="FirstName" class="form-control" />
                            <div class="asp-val">
                                <span asp-validation-for="FirstName"></span>
                            </div>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label asp-for="LastName" class="col-sm-2 col-form-label">
                            LastName
                            <i class="text-danger">*</i>
                        </label>
                        <div class="col-sm-10">
                            <input asp-for="LastName" class="form-control" />
                            <div class="asp-val">
                                <span asp-validation-for="LastName"></span>
                            </div>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label asp-for="PhoneNumber" class="col-sm-2 col-form-label">
                            PhoneNumber
                            <i class="text-danger">*</i>
                        </label>
                        <div class="col-sm-10">
                            <input asp-for="PhoneNumber" class="form-control" />
                            <div class="asp-val">
                                <span asp-validation-for="PhoneNumber"></span>
                            </div>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label">
                            Hospital
                            <i class="text-danger">*</i>
                        </label>
                        <div class="col-sm-10">
                            <select class="form-control text-primary" id="type" asp-for="DepartmentName">
                                <option selected disabled>--- Select Department ---</option>
                                @foreach (var department in departments)
                                {
                                    <option value="@department.DepartmentName">@department.DepartmentName</option>
                                }
                            </select>
                            <div class="asp-val">
                                <span asp-validation-for="DepartmentName"></span>
                            </div>
                        </div>
                    </div>
                    <div class="form-group col-sm-2">
                        <input type="submit" value="Save" class="btn btn-info btn-block font-weight-bold" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
