@model HospitalEditInputModel
@{
    ViewData["Title"] = "Hospital Edit";
}

<div class="card shadow mb-4">
    <div class="card-header d-flex flex-row align-items-center justify-content-between">
        <h6 class="m-0 font-weight-bold text-secondary">Hospital <span class="text-info">Edit</span></h6>
        <div>
            <a class="" href="/Hospital/Details" role="button">
                <h6 class="m-0 font-weight-bold text-secondary"><i class="fas fa-step-backward"></i>Back to <span class="text-info">Details</span></h6>
            </a>
        </div>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-10">
                <form method="post">
                    <div class="form-group row">
                        <label asp-for="Name" class="col-sm-2 col-form-label">
                            Name
                            <i class="text-danger">*</i>
                        </label>
                        <div class="col-sm-10">
                            <input asp-for="Name" class="form-control" />
                            <div class="asp-val">
                                <span asp-validation-for="Name"></span>
                            </div>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label asp-for="Address" class="col-sm-2 col-form-label">
                            Address
                            <i class="text-danger">*</i>
                        </label>
                        <div class="col-sm-10">
                            <input asp-for="Address" class="form-control" />
                            <div class="asp-val">
                                <span asp-validation-for="Address"></span>
                            </div>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label asp-for="Email" class="col-sm-2 col-form-label">
                            Email
                            <i class="text-danger">*</i>
                        </label>

                        <div class="col-sm-10">
                            <input type="email" asp-for="Email" class="form-control" />
                            <div class="asp-val">
                                <span asp-validation-for="Email"></span>
                            </div>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label asp-for="PhoneNumber" class="col-sm-2 col-form-label">
                            PhoneNumber
                            <i class="text-danger">*</i>
                        </label>
                        <div class="col-sm-10">
                            <input type="tel" asp-for="PhoneNumber" class="form-control" />
                            <div class="asp-val">
                                <span asp-validation-for="PhoneNumber"></span>
                            </div>
                        </div>
                    </div>
                    <input type="hidden" asp-for="Id" />
                    <div class="form-group col-sm-2">
                        <input type="submit" value="Save" class="btn btn-info btn-block font-weight-bold" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
