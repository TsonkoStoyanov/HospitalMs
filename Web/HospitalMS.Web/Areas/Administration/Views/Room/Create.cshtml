@model RoomCreateInputModel

@{var roomTypes = (List<RoomCreateRoomTypeViewModel>)this.ViewData["roomTypes"];}
@{var departments = (List<RoomCreateDepartmentViewModel>)this.ViewData["departments"];}


@{
    ViewData["Title"] = "Room Create";
}




    
    <div class="card shadow mb-4">
        <div class="card-header d-flex flex-row align-items-center justify-content-between">
            <h6 class="m-0 font-weight-bold text-secondary">Room <span class="text-info">Create</span></h6>
            <div>
                <a class="" href="/Administration/Room/All" role="button">
                    <h6 class="m-0 font-weight-bold text-secondary"><i class="fas fa-step-backward"></i>Back to <span class="text-info">All</span></h6>
                </a>
            </div>
        </div>
        <div class="card-body">
            @if (roomTypes.Count == 0)
            {
                <h4 class="text-danger font-italic">Please create RoomType.</h4>
            }
            else if (departments.Count == 0)
            {
                <h4 class="text-danger font-italic">Please create Department.</h4>
            }
            else
            {
                <div class="row">
                    <div class="col-md-10">
                        <form method="post">
                            <div class="form-group row">
                                <label asp-for="Name" class="col-sm-2 col-form-label">
                                    Name
                                    <i class="text-danger">*</i>
                                </label>
                                <div class="col-sm-10">
                                    <input asp-for="Name" class="form-control" />
                                    <div class="asp-val">
                                        <span asp-validation-for="Name"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-sm-2 col-form-label">
                                    RoomType
                                    <i class="text-danger">*</i>
                                </label>
                                <div class="col-sm-10">
                                    <select class="form-control text-primary" id="type" asp-for="RoomType">
                                        <option selected disabled>--- Select RoomType ---</option>
                                        @foreach (var type in roomTypes)
                                        {
                                            <option value="@type.RoomTypeName">@type.RoomTypeName</option>
                                        }
                                    </select>
                                    <div class="asp-val">
                                        <span asp-validation-for="RoomType"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-sm-2 col-form-label">
                                    Department
                                    <i class="text-danger">*</i>
                                </label>
                                <div class="col-sm-10">
                                    <select class="form-control text-primary" id="type" asp-for="Department">
                                        <option selected disabled>--- Select Department ---</option>
                                        @foreach (var department in departments)
                                        {
                                            <option value="@department.DepartmentName">@department.DepartmentName</option>
                                        }
                                    </select>
                                    <div class="asp-val">
                                        <span asp-validation-for="Department"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group col-sm-2">
                                <input type="submit" value="Create" class="btn btn-info btn-block font-weight-bold" />
                            </div>
                        </form>
                    </div>
                </div>
            }
        </div>
    </div>
    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
