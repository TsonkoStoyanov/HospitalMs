@page
@model ForgotPasswordModel


<div class="wrapper fadeInDown">
    <div id="formContent">
        <div id="sname" class="fadeIn first">
            <h1>Hospital<span class="text-info">MS</span></h1>
        </div>
        <div class="fadeIn second">
            <h5 class="text-dark">Forgot your password?</h5>
        </div>

        <form method="post">
            <div asp-validation-summary="All"></div>
            <div>
                <input asp-for="Input.Email" class="fadeIn third" placeholder="Please enter your email." />
            </div>
            <button type="submit" class="btn btn-info btn-f fadeIn fourth">Submit</button>
        </form>
       
        <!-- Back to Login -->
        <div id="formFooter">
            <a class="underlineHover" asp-page="./Login">Back to Login page</a>
        </div>
    </div>
</div>




@section Scripts {
<partial name="_ValidationScriptsPartial" />
}
