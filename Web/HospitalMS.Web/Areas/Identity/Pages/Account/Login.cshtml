@page
@model LoginModel

<div class="wrapper fadeInDown">
    <div id="formContent">
        <div id="sname" class="fadeIn second">
            <h1>Hospital<span class="text-info">MS</span></h1>
        </div>
        <div class="fadeIn first">
            <h5>Use an account to log in.</h5>
        </div>

        <!-- Login Form -->
        <form>
            <div asp-validation-summary="All"></div>
            <div>
                <input asp-for="Input.Email" class="fadeIn second" name="Email" placeholder="Enter your e-mail">
                <span asp-validation-for="Input.Email" ></span>
            </div>
            <div>
                <input asp-for="Input.Password" class="fadeIn third" name="Password" placeholder="Enter your password">
                <span asp-validation-for="Input.Password"></span>
            </div>
            <button type="submit" id="btn-lgn" class="btn btn-info fadeIn fourth">Log in</button>
            <a asp-page="./Register" id="btn-reg" class="btn btn-danger fadeIn five"> Register </a>
        </form>

        <!-- Remind Passowrd -->
        <div id="formFooter">
            <a class="underlineHover" asp-page="./ForgotPassword">Forgot Password?</a>
        </div>
    </div>
</div>



@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
