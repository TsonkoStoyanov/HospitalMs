@model DepartmentDetailsViewModel

@{
    ViewData["Title"] = "Department Details";
}
<!-- Departments Card Example -->
<div class="card shadow mb-4">
    <div class="card-header d-flex flex-row align-items-center justify-content-between">
        <h6 class="m-0 font-weight-bold text-secondary">Department <span class="text-info">Details</span></h6>
        @if (this.User.IsInRole(GlobalConstants.AdministratorRoleName))
        {
            <div>
                <a class="" href="/Administration/Department/All" role="button">
                    <h6 class="m-0 font-weight-bold text-secondary"><i class="fas fa-step-backward"></i>Back to <span class="text-info">All</span></h6>
                </a>
            </div>
        }
        else
        {
            <div>
                <a class="" href="/Department/All" role="button">
                    <h6 class="m-0 font-weight-bold text-secondary"><i class="fas fa-step-backward"></i>Back to <span class="text-info">All</span></h6>
                </a>
            </div>
        }
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Name)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Name)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Description)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Description)
            </dd>
            <dt class="col-sm-2">
                Status
            </dt>
            <dd class="col-sm-10">
                @(Model.IsActive ? "Active" : "Inactive")
            </dd>
            <dt class="col-sm-2">
                Hospital
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.HospitalName)
            </dd>
            <dt class="col-sm-2">
                Rooms Count
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Rooms.Count)
            </dd>
        </dl>

        @if (this.User.Identity.IsAuthenticated && this.User.IsInRole(GlobalConstants.AdministratorRoleName))
        {
            <div class="col-sm-2">
                <a href="/Administration/Department/Edit/@Model.Id" class="btn btn-info btn-block font-weight-bold">Edit</a>
            </div>
        }
    </div>
</div>

