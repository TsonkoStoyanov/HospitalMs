@model List<PatientDiagnoseViewModel>

@{
    ViewData["Title"] = "Diagnose All";
}
    <h1 class="h3 mb-0 text-gray-800">Welcome, @User.Identity.Name</h1>
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold">Diagnose <span class="text-info">All</span></h6>
    </div>
    <div class="card-body">
        @if (@Model.Count != 0)
        {
            <div class="table-responsive">
                <div id="dataTable_wrapper" class="dataTables_wrapper dt-bootstrap4">
                    <div class="row">
                        <div class="col-sm-12 col-md-6">
                        </div>
                        <div class="col-sm-12 col-md-6"></div>
                    </div>
                    <div class="row">
                        <div class="col-sm-12">
                            <table class="table table-bordered dataTable" id="dataTable" role="grid" aria-describedby="dataTable_info" style="width: 100%;" width="100%" cellspacing="0">
                                <thead>
                                    <tr role="row">
                                        <th class="sorting_asc" tabindex="0" aria-controls="dataTable" rowspan="1" colspan="1" style="width: 260px;" aria-sort="ascending" aria-label="Details: activate to sort column descending">Details</th>
                                        <th class="sorting" tabindex="0" aria-controls="dataTable" rowspan="1" colspan="1" style="width: 100px;" aria-label="Date: activate to sort column ascending">Date</th>
                                        <th class="sorting" tabindex="0" aria-controls="dataTable" rowspan="1" colspan="1" style="width: 160px;" aria-label="Date: activate to sort column ascending">Doctor</th>

                                    </tr>
                                </thead>
                                <tfoot>
                                    <tr>
                                        <th rowspan="1" colspan="1">Details</th>
                                        <th rowspan="1" colspan="1">Date</th>
                                        <th rowspan="1" colspan="1">Doctor</th>
                                    </tr>
                                </tfoot>
                                <tbody>
                                    @for (int i = 0; i < Model.Count; i++)
                                    {
                                    <tr role="row" class="@(i % 2 != 0 ? "even" : "odd")">
                                        <td class="sorting_1">
                                            @Model[i].Details
                                        </td>
                                        <td>@Model[i].Date</td>
                                        <td>@String.Concat(Model[i].Doctor.FirstName + " " + Model[i].Doctor.LastName)</td>
                                    </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        }
        else
        {
            <h4>You have no Departments in your Hospital.</h4>
        }
    </div>
</div>
