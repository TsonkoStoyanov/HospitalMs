@model List<RoomAllViewModel>

@{
    ViewData["Title"] = "Room All";

}
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold">Room <span class="text-info">All</span></h6>
    </div>

    <div class="card-body">
        @if (@Model.Count != 0)
        {
            <div class="table-responsive">
                <div id="dataTable_wrapper" class="dataTables_wrapper dt-bootstrap4">
                    <div class="row">
                        <div class="col-sm-12 col-md-6">
                        </div>
                        <div class="col-sm-12 col-md-6"></div>
                    </div>
                    <div class="row">
                        <div class="col-sm-12">
                            <table class="table table-bordered dataTable" id="dataTable" role="grid" aria-describedby="dataTable_info" style="width: 100%;" width="100%" cellspacing="0">
                                <thead>
                                    <tr role="row">
                                        <th class="sorting_asc" tabindex="0" aria-controls="dataTable" rowspan="1" colspan="1" style="width: 160px;" aria-sort="ascending" aria-label="Name: activate to sort column descending">Name</th>
                                        <th class="sorting" tabindex="0" aria-controls="dataTable" rowspan="1" colspan="1" style="width: 246px;" aria-label="RoomType: activate to sort column ascending">RoomType</th>
                                        <th class="sorting" tabindex="0" aria-controls="dataTable" rowspan="1" colspan="1" style="width: 246px;" aria-label="Department: activate to sort column ascending">Department</th>
                                        <th class="sorting" tabindex="0" aria-controls="dataTable" rowspan="1" colspan="1" style="width: 246px;" aria-label="Beds: activate to sort column ascending">Beds</th>
                                    </tr>
                                </thead>
                                <tfoot>
                                    <tr>
                                        <th rowspan="1" colspan="1">Name</th>
                                        <th rowspan="1" colspan="1">RoomType</th>
                                        <th rowspan="1" colspan="1">Department</th>
                                        <th rowspan="1" colspan="1">Beds</th>
                                    </tr>
                                </tfoot>
                                <tbody>
                                    @for (int i = 0; i < Model.Count; i++)
                                    {
                                        <tr role="row" class="@(i % 2 != 0 ? "even" : "odd")">
                                            <td>
                                                <a class="text-info" href="/Room/Details/@Model[i].Id">
                                                    @Model[i].Name
                                                </a>
                                            </td>
                                            <td>@(Model[i].RoomTypeName)</td>
                                            <td>@(Model[i].DepartmentName)</td>
                                            <td>@(Model[i].Beds.Count)</td>                                            
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        }
        else
        {
            <h4>You have no Room in your Hospital.</h4>
        }

    </div>
</div>
