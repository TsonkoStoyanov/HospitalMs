@model List<DoctorAllViewModel>

@{
    ViewData["Title"] = "Doctor All";

}
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold">Doctor <span class="text-info">All</span></h6>
    </div>

    <div class="card-body">
        @if (@Model.Count != 0)
        {
            <div class="table-responsive">
                <div id="dataTable_wrapper" class="dataTables_wrapper dt-bootstrap4">
                    <div class="row">
                        <div class="col-sm-12 col-md-6">
                        </div>
                        <div class="col-sm-12 col-md-6"></div>
                    </div>
                    <div class="row">
                        <div class="col-sm-12">
                            <table class="table table-bordered dataTable" id="dataTable" role="grid" aria-describedby="dataTable_info" style="width: 100%;" width="100%" cellspacing="0">
                                <thead>
                                    <tr role="row">
                                        <th class="sorting_asc" tabindex="0" aria-controls="dataTable" rowspan="1" colspan="1" style="width: 160px;" aria-sort="ascending" aria-label="Name: activate to sort column descending">Full Name</th>
                                        <th class="sorting" tabindex="0" aria-controls="dataTable" rowspan="1" colspan="1" style="width: 96px;" aria-label="PhoneNumber: activate to sort column ascending">PhoneNumber</th>
                                        <th class="sorting" tabindex="0" aria-controls="dataTable" rowspan="1" colspan="1" style="width: 96px;" aria-label="Department: activate to sort column ascending">Department</th>

                                        @if (this.User.Identity.IsAuthenticated && (this.User.IsInRole(GlobalConstants.AdministratorRoleName)
                                                                             || this.User.IsInRole(GlobalConstants.ReceptionistRoleName)))
                                        {
                                            <th rowspan="1" colspan="1" style="width: 96px;">Actions</th>
                                        }
                                        else if (this.User.Identity.IsAuthenticated && this.User.IsInRole(GlobalConstants.PatientRoleName))
                                        {
                                            <th rowspan="1" colspan="1" style="width: 96px;">Create Appointment</th>
                                        }

                                    </tr>
                                </thead>
                                <tfoot>
                                    <tr>
                                        <th rowspan="1" colspan="1">Full Name</th>
                                        <th rowspan="1" colspan="1">PhoneNumber</th>
                                        <th rowspan="1" colspan="1">Department</th>

                                        @if (this.User.Identity.IsAuthenticated && (this.User.IsInRole(GlobalConstants.AdministratorRoleName)
                                                                            || this.User.IsInRole(GlobalConstants.ReceptionistRoleName)))
                                        {
                                            <th rowspan="1" colspan="1">Actions</th>
                                        }
                                        else if (this.User.Identity.IsAuthenticated && this.User.IsInRole(GlobalConstants.PatientRoleName))
                                        {
                                            <th rowspan="1" colspan="1">Create Appointment</th>
                                        }
                                    </tr>
                                </tfoot>
                                <tbody>
                                    @for (int i = 0; i < Model.Count; i++)
                                    {
                                        <tr role="row" class="@(i % 2 != 0 ? "even" : "odd")">
                                            <td>
                                                <a class="text-info" href="/Doctor/Details/@Model[i].Id">
                                                    @string.Concat(Model[i].FirstName + " " + @Model[i].LastName)
                                                </a>
                                            </td>
                                            <td>@(Model[i].PhoneNumber)</td>
                                            <td>@(Model[i].DepartmentName)</td>
                                            @if (this.User.Identity.IsAuthenticated && (this.User.IsInRole(GlobalConstants.AdministratorRoleName)
                                                                              || this.User.IsInRole(GlobalConstants.ReceptionistRoleName)))
                                            {
                                                <td>
                                                    <a href="/Administration/Doctor/Edit/@Model[i].Id" class="btn btn-xs  btn-info">
                                                        <i class="fa fa-edit" title="Edit"></i>
                                                    </a>
                                                    <a href="/Administration/Doctor/Delete/@Model[i].Id" class="btn btn-xs  btn-danger">
                                                        <i class="fa fa-trash" title="Delete"></i>
                                                    </a>
                                                </td>
                                            }
                                            else if (this.User.Identity.IsAuthenticated && this.User.IsInRole(GlobalConstants.PatientRoleName))
                                            {
                                                <td>
                                                    <a href="/Appointment/Create/@Model[i].Id" class="btn btn-xs  btn-info">
                                                        <i class="far fa-calendar-check" title="Create Appointment"></i>
                                                    </a>
                                                </td>
                                            }
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        }
        else
        {
            <h4>You have no Doctors in your Hospital.</h4>
        }

    </div>
</div>
